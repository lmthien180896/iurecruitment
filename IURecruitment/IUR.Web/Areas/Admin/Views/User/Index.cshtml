
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section script {
    <script src="~/Assets/admin/js/controller/userController.js"></script>
}

<div class="title-addnew">
    <h3 class="section-title-lg">Manage Users</h3>
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
        <a class="btn btn-danger" id="btnDeleteAll" style="color: white;" href="#"><i class="fa fa-trash"></i> Delete All</a>
        <a class="btn btn-success pull-right" id="btnAdd" style="color: white;" href="#" data-toggle="modal" data-target="#modalAdd"><i class="fa fa-plus-circle"></i> Add User</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="bg-dark">
                <th style="width: 5%"><input type="checkbox" id="chkAll" /></th>
                <th scope="col">Username</th>
                <th scope="col">Fullname</th>
                <th scope="col">Phone</th>
                <th scope="col">Created Date</th>
                <th scope="col">Authorized</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tblUsers"></tbody>
    </table>
    <div class="pagination" id="pagination"></div>
    <script id="template" type="x-tmpl-mustache">
        <tr>
            <td><input type="checkbox" class="chkDelete" data-id={{ID}} /></td>
            <td>{{Username}}</td>
            <td><input type="text" class="form-control txtFullname" data-id="{{ID}}" value="{{Fullname}}" /></td>
            <td><input type="text" class="form-control txtPhone" data-id="{{ID}}" value="{{Phone}}" /></td>
            <td>{{{CreatedDate}}}</td>
            <td>{{{Status}}}</td>
            <td class="action-icon">                
                <a href="#"><i class="fa fa-trash fa-lg btnDelete" data-id="{{ID}}" data-toggle="tooltip" title="Delete"></i></a>
            </td>
        </tr>
    </script>
</div>


<!-- Modal Add -->
<div class="modal fade" id="modalAdd" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add user</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="myForm" autocomplete="off">
                    <div class="form-group row">
                        <label for="Username" class="col-sm-3 col-form-label">Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtUsername" name="Username" required>
                            <span class="badge badge-danger" id="warning-username" style="display: none;">Username already existed</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="txtPassword" name="HashedPassword" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-3 col-form-label">Confirm password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="txtPassword2" required>
                            <span href="#" id="warning-password" class="badge badge-danger" style="display: none;">Not matched</span>
                            <span href="#" id="matching-password" class="badge badge-success" style="display: none;">Matching</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtFullname" class="col-sm-3 col-form-label">Fullname</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Fullname" id="txtFullname">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Phone" class="col-sm-3 col-form-label">Phone</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Phone" id="txtPhone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="chkStatus" class="col-sm-3 col-form-label">Activated</label>                       
                        <div class="col-sm-9">
                            <input type="checkbox" name="status" checked id="chkStatus"/>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" id="btnSave"><i class="fa fa-save"></i> Save</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


