@model IUR.Web.Models.FooterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section script{
    <script src="~/Assets/admin/js/controller/footerController.js"></script>
    @*<script>
        var txtContent = CKEDITOR.replace('txtContent', {
            customConfig: '/Assets/admin/js/plugins/ckeditor/config.js',
        });
    </script>*@
}

<div class="title-addnew">
    <h3 class="section-title-lg">Edit @Model.Name</h3>
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
        <a class="btn btn-dark pull-right" id="btnSubmit" style="color: white;" href="#"><i class="fa fa-save"></i> Save</a>
    </div>
</div>

<form action="/Admin/Common/SaveFooter" method="post" id="footerForm">

    <div class="form-group">
        <input type="hidden" id="txtID" name="ID" value="@Model.ID" />
        <div class="col-sm-12">
            <textarea class="form-control" id="txtContent" name="content" rows="40">@Model.Content</textarea>
        </div>
    </div>
</form>

