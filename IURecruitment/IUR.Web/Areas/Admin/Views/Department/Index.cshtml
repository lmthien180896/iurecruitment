
@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section script{
    <script src="~/Assets/admin/js/controller/departmentController.js"></script>
}


<div class="title-addnew">
    <h3 class="section-title-lg">Manage Departments</h3>
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
        <a class="btn btn-danger" id="btnDeleteAll" style="color: white;" href="#"><i class="fa fa-trash"></i> Delete All</a>
        <a class="btn btn-success pull-right" id="btnAdd" style="color: white;" href="#" data-toggle="modal" data-target="#modalAddOrUpdate"><i class="fa fa-plus-circle"></i> Add Department</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="bg-dark">
                <th style="width: 5%"><input type="checkbox" id="chkAll" /></th>
                <th scope="col" style="width: 10%">#</th>
                <th scope="col" style="width: 55%">Department</th>
                <th scope="col" style="width: 20%">Status</th>
                <th scope="col" style="width: 10%">Actions</th>
            </tr>
        </thead>
        <tbody id="tblDepartments"></tbody>
    </table>
    <div class="pagination" id="pagination"></div>
    <script id="template" type="x-tmpl-mustache">
        <tr>
            <td><input type="checkbox" class="chkDelete" data-id={{ID}} /></td>
            <td>{{Index}}</td>
            <td>{{Department}}</td>
            <td>{{{Status}}}</td>
            <td class="action-icon">
                <a href="#"><i class="fa fa-pencil fa-lg btnUpdate" data-id="{{ID}}" data-toggle="tooltip" title="Update"></i></a>
                <a href="#"><i class="fa fa-trash fa-lg btnDelete" data-id="{{ID}}" data-toggle="tooltip" title="Delete"></i></a>
            </td>
        </tr>
    </script>
</div>

<!-- Modal -->
<div class="modal fade" id="modalAddOrUpdate" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add/Update Department</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form">
                    <input type="hidden" id="txtID" />
                    <input type="hidden" id="chkStatus" />
                    <div class="form-group">
                        <label for="txtDepartment" class="col-sm-3 col-form-label">Department</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="txtDepartment" name="Department">
                            <span id="warningDepartment" style="display: none;" class="warning-invalidate">Please enter department name</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" id="btnSave"><i class="fa fa-save"></i> Save</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>





