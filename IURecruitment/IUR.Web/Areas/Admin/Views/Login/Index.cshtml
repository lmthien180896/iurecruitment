
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Log in</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">        
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/bootstrap/css/bootstrap.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/fonts/font-awesome-4.7.0/css/font-awesome.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/animate/animate.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/css-hamburgers/hamburgers.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/animsition/css/animsition.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/select2/select2.min.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/vendor/daterangepicker/daterangepicker.css">    
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/admin/Login_v14/css/main.css">    
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
                {

                    <span class="login100-form-title p-b-32">
                        Account Login
                    </span>

                    <span class="login100-form">
                        <div class="text-danger">@Html.ValidationSummary(true)</div>
                        <br />
                    </span>

                    <span class="txt1 p-b-11">
                        Username
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                        <input class="input100" type="text" name="UserName">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <input class="input100" type="password" name="Password">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    
    <script src="/assets/admin/Login_v14/vendor/jquery/jquery-3.2.1.min.js"></script>    
    <script src="/assets/admin/Login_v14/vendor/animsition/js/animsition.min.js"></script>    
    <script src="/assets/admin/Login_v14/vendor/bootstrap/js/popper.js"></script>
    <script src="/assets/admin/Login_v14/vendor/bootstrap/js/bootstrap.min.js"></script>    
    <script src="/assets/admin/Login_v14/vendor/select2/select2.min.js"></script>    
    <script src="/assets/admin/Login_v14/vendor/daterangepicker/moment.min.js"></script>
    <script src="/assets/admin/Login_v14/vendor/daterangepicker/daterangepicker.js"></script>    
    <script src="/assets/admin/Login_v14/vendor/countdowntime/countdowntime.js"></script>    
    <script src="/assets/admin/Login_v14/js/main.js"></script>
    <script src="/assets/admin/js/controller/loginController.js"></script>
</body>
</html>